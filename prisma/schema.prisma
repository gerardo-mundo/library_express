generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  USER
  ADMIN
  AUXILIARY
  STUDENT
  PROFESSOR
}

enum PublicationTypes {
  ARTICLE
  MAGAZINE
  NEWSPAPER
}

model User {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String    @db.VarChar(120)
  last_name    String    @db.VarChar(120)
  email        String    @unique
  password     String
  role         Roles     @default(USER)
  created_at   DateTime  @default(now())
  last_session DateTime?
}

model Book {
  id           Int      @id @default(autoincrement())
  title        String
  author       String
  author_two   String?
  author_three String?
  publisher    String
  collection   String
  adquisition  Int      @unique
  copies       Int
  available    Boolean
  created_at   DateTime @default(now())
}

model Thesis {
  id             Int      @id @default(autoincrement())
  title          String   @unique
  author         String
  author_two     String?
  author_three   String?
  publisher      String
  thesis_advisor String
  copies         Int
  created_at     DateTime @default(now())
}

model Publication {
  id           Int              @id @default(autoincrement())
  type         PublicationTypes
  title        String           @unique
  author       String
  author_two   String?
  author_three String?
  copies       Int
  ISBN         String?
  ISSN         String?
  available    Boolean          @default(true)
  created_at   DateTime         @default(now())
}
